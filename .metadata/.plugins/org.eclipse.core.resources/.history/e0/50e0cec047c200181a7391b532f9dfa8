package no.hvl.dat108;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class Innlogging
 */
@WebServlet("/Innlogging")
public class Innlogging extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		response.setContentType("text/html; charset=ISO-8859-1");
		PrintWriter out = response.getWriter();
		out.println("<!DOCTYPE html>");
		out.println("<html>");
		out.println("<head>");
		out.println("<meta charset=\"ISO-8859-1\">");
		out.println("<title>Innlogging</title>");
		out.println("</head>");
		out.println("<body>");
		if(request.getAttribute("feil") != null && request.getAttribute("feil").equals("ja")) {
			out.println("<p>Feil passord, prov igjen!</p>");
		}
		out.println("<form name=\"loginForm\" action=\"/Innlogging\" method=\"post\">");
		out.println("<fieldset>");
		out.println("<legend>Innlogging</legend>");
		out.println("Passord:<br>\r\n" + 
				"    <input type=\"password\" name=\"passord\" value=\"Passord\"><br><br>\r\n" + 
				"    <input type=\"submit\" value=\"Logg inn\">");
		out.println("</fieldset>\r\n" + "</form>");
		out.println("</body>");
		out.println("</html>");
	
	}

	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String innPass = request.getParameter("passord");
		if(innPass.equals(getInitParameter("Passord"))) {
			response.sendRedirect("Handleliste");
		} else {
			response.sendRedirect("Innlogging" + "?feil='ja'");
		}
	}

}
